<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppBar</item>
        <item name="colorPrimaryDark">@color/colorAppBar</item>
        <item name="colorAccent">@color/colorVidobl</item>
        <item name="android:windowBackground">@color/colorText</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="TextAppearance.FontPatch" parent="android:TextAppearance">
        <item name="fontPatch">font/RobotoCondensed-Regular.ttf</item>

    </style>

    <style name="TableRow">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name="TextLitNAme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPatch</item>

    </style>



</resources>
