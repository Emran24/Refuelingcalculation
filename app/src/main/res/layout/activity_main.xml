<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tech.em.refuelingcalculation.MainActivity"
    android:theme="@style/AppTheme"
    android:orientation="vertical">


    <TextView
        style="@style/TextLitNAme"
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/residue"
        android:textSize="25sp"
        android:padding="5dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:background="@color/colorBackground" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">
            <FrameLayout android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBackground">

                <TextView
                    style="@style/TextLitNAme"
                    android:id="@+id/TextView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Left"
                    android:textAlignment="viewEnd"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                     />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:id="@+id/editText11"
                    android:text="@string/OTF"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorTextcifr"
                    android:cursorVisible="true"
                    android:layout_marginTop="8dp"
                    android:textSize="30sp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"/>
            </FrameLayout>

            <FrameLayout android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/colorBackground">
            <TextView
                android:id="@+id/TextView12"
                style="@style/TextLitNAme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Ctr"
                android:textAlignment="viewEnd"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editText12"
                android:text="@string/OTF"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextcifr"
                android:cursorVisible="true"
                android:layout_marginTop="8dp"
                android:textSize="30sp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
        </FrameLayout>

        <FrameLayout android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="@color/colorBackground">
            <TextView
                style="@style/TextLitNAme"
                android:id="@+id/TextView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Right"
                android:textAlignment="viewEnd"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editText13"
                android:text="@string/OTF"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextcifr"
                android:cursorVisible="true"
                android:layout_marginTop="8dp"
                android:textSize="30sp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
        </FrameLayout>

    </TableRow>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <TextView
            style="@style/TextLitNAme"
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TotalRefueling"
            android:textSize="20sp"
            android:padding="15dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="3"
            android:id="@+id/editText2"
            android:text="@string/TotalRefuelingOTF"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTextcifr"
            android:cursorVisible="true"
            android:textSize="30sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/TextLitNAme"
            android:id="@+id/TextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Density"
            android:textSize="20sp"
            android:padding="15dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="3"
            android:id="@+id/editText3"
            android:text="@string/DensityOTF"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTextcifr"
            android:cursorVisible="true"
            android:textSize="30sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:layout_margin="1dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText4"
            android:textAlignment="center"
            android:text="@string/Cal1OTF"
            android:textSize="60sp"
            android:textColor="@color/colorTextwith" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/editText5"
            android:textAlignment="center"
            android:text="@string/Cal2OTF"
            android:textSize="25sp"
            android:textColor="@color/colorText"
            android:elevation="0dp"
            android:layout_marginTop="70dp" />
    </FrameLayout>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:text="@string/Cal7"
        android:textColor="@color/colorTextwith"
        />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:text="@string/Cal8"
        android:textColor="@color/colorTextwith"
        />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:text="@string/Cal9"
        android:textColor="@color/colorTextwith" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:text="00"
        android:textColor="@color/colorTextwith" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal4"
            android:textColor="@color/colorTextwith"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal5"
            android:textColor="@color/colorTextwith"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal6"
            android:textColor="@color/colorTextwith" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/CalC"
            android:textColor="@color/colorTextwith" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal1"
            android:textColor="@color/colorTextwith"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal2"
            android:textColor="@color/colorTextwith"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal3"
            android:textColor="@color/colorTextwith" />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="00"
            android:textColor="@color/colorTextwith" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <Button
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/Cal0"
            android:textColor="@color/colorTextwith"
            />



        <Button
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="@string/CalZ"
            android:textColor="@color/colorTextwith" />

        <Button
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="00"
            android:textColor="@color/colorTextwith" />
    </TableRow>


</LinearLayout>
